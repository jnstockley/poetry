FROM python:3.13.1-alpine AS build

RUN apk update && \
    apk upgrade && \
    apk add alpine-sdk python3-dev libressl-dev musl-dev libffi-dev gcc libressl-dev curl && \
    addgroup -S python3 && adduser -S python3 -G python3

COPY requirements.txt .

RUN pip install --upgrade pip && \
    pip install --user -r requirements.txt

FROM python:3.13.1-alpine

COPY --from=build /root/.local/ /usr/local/
