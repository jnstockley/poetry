FROM dhi.io/python:3.12.12-dev@sha256:886ed0367109ce678958ae5c13c5f807d9958eec3a3e69da1a72b3b6718604f1 AS build

COPY requirements.txt .

RUN pip install --user --upgrade pip && \
    pip install --user -r requirements.txt

FROM dhi.io/python:3.12.12@sha256:8fdf129968594c319caf810dcf15b2541d08d2b166a9306f6aaf3637c3168e06

LABEL org.opencontainers.image.authors="Jack Stockley <jack@jstockley.com>"
