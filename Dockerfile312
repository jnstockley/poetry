FROM dhi.io/python:3.12.12-dev@sha256:0dc63df7a74638501b38ef95872ab7c4ce9563fc8105c7be8990e6955c686ad4 AS build

COPY requirements.txt .

RUN pip install --user --upgrade pip && \
    pip install --user -r requirements.txt

