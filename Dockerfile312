FROM dhi.io/python:3.12.12-dev@sha256:88584f183585e8a976d42099501c624ce9be8dcca31999e29bd0d0dcd4901c3e AS build

COPY requirements.txt .

RUN pip install --user --upgrade pip && \
    pip install --user -r requirements.txt

