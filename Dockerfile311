FROM dhi.io/python:3.11.14-dev@sha256:8eccb58cf6e97c18f6e48749e7eac3617aefedb4ac1a1e26dc872828163d2a03 AS build

COPY requirements.txt .

RUN pip install --user --upgrade pip && \
    pip install --user -r requirements.txt

FROM dhi.io/python:3.11.14@sha256:7551ba78913fa7a0f55c3e4228171cfe39b08438c4554ff3676ec2b07ff4ef5f

LABEL org.opencontainers.image.authors="Jack Stockley <jack@jstockley.com>"
