FROM dhi.io/python:3.11.14-dev@sha256:26d347ab41bf525ead393378d476376a4b0ff74c8617faa92d71e1c72799a102 AS build

COPY requirements.txt .

RUN pip install --user --upgrade pip && \
    pip install --user -r requirements.txt

