FROM dhi.io/python:3.11.14-dev@sha256:3a9f2a0f579f20d7f60e64f19b8167d28d4d1863aa8ac66e71c64bef8b4d11c1 AS build

COPY requirements.txt .

RUN pip install --user --upgrade pip && \
    pip install --user -r requirements.txt

