FROM dhi.io/python:3.10.19-dev@sha256:a09be886b4f1e0747946c26d5684b40421dc4326bc470c2b49d9ceec81004724 AS build

COPY requirements.txt .

RUN pip install --user --upgrade pip && \
    pip install --user -r requirements.txt

FROM dhi.io/python:3.10.19@sha256:bac3e2604ef4be5930a3b30654b822c21913ae5bcf42791c21f2009180a82a18

LABEL org.opencontainers.image.authors="Jack Stockley <jack@jstockley.com>"
