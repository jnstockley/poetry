FROM dhi.io/python:3.10.19-dev@sha256:75ed67a8d5e75287a6536747aa49801483a6b300520cf54557279fd473ff867c AS build

COPY requirements.txt .

RUN pip install --user --upgrade pip && \
    pip install --user -r requirements.txt

