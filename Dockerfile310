FROM dhi.io/python:3.10.19-dev@sha256:d93fc0e1f877870fc77872d88e9183e8889f065be1b573144d3edfdb302571c9 AS build

COPY requirements.txt .

RUN pip install --user --upgrade pip && \
    pip install --user -r requirements.txt

