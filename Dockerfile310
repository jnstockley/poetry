FROM dhi.io/python:3.10.19-dev@sha256:22c1268da141a165db7d552be202a9219b77797ca749faa160e8b8574c75de43 AS build

COPY requirements.txt .

RUN pip install --user --upgrade pip && \
    pip install --user -r requirements.txt

