FROM dhi.io/python:3.10.19-dev@sha256:b0afa1f033e25bbf96d5555bad92ed8d37bc03bf2567cb2e56f36aee75185c3e AS build

COPY requirements.txt .

RUN pip install --user --upgrade pip && \
    pip install --user -r requirements.txt

