FROM dhi.io/python:3.10.19-dev@sha256:5579582f9d1a3a2df3c260f81e4ec87e76799e9571d01d07110654bb622ed63e AS build

COPY requirements.txt .

RUN pip install --user --upgrade pip && \
    pip install --user -r requirements.txt

