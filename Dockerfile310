FROM dhi.io/python:3.10.19-dev@sha256:720cf9e5d74af963565edae561623b29b25007f3e8e38868506ba1f0efc8a307 AS build

COPY requirements.txt .

RUN pip install --user --upgrade pip && \
    pip install --user -r requirements.txt

FROM dhi.io/python:3.10.19@sha256:aae0e7aaef5124595d95dda5046c0f41d3d4af868d64649e0da348b620953d82

LABEL org.opencontainers.image.authors="Jack Stockley <jack@jstockley.com>"
