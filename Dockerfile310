FROM dhi.io/python:3.10.19-dev@sha256:720cf9e5d74af963565edae561623b29b25007f3e8e38868506ba1f0efc8a307 AS build

COPY requirements.txt .

RUN pip install --user --upgrade pip && \
    pip install --user -r requirements.txt

